{{> header}}
<main>
  <div id="species-composition" class="container">
    <h2 class="mt-5 mb-0">鯨豚觀測資料視覺化成果</h2>
    <ul class="nav nav-tabs my-5 border-0" id="pills-tab" role="tablist">
      <li class="nav-item pe-3" role="presentation">
        <a class="nav-link active" href="/visualization/species-composition">物種組成</a>
      </li>
      <li class="nav-item pe-3" role="presentation">
        <a class="nav-link" href="/visualization/temporal-distribution">時間分布</a>
      </li>
    </ul>
    <div class="container px-5 mb-5">
      <div class="row">
        <h3 class="fs-4 fw-bolder px-1 py-3">物種組成圓餅圖</h3>
        <div class="col-md-8 mb-5" id="species-composition-donut-chart"></div>
        <div class="col-md-4 mb-5 text-center" id="species-composition-legend"></div>
      </div>
      <div class="row">
        <h3 class="fs-4 fw-bolder px-1 py-3">物種觀測紀錄統計表</h3>
        <div class="col-12 mb-5" id="species-composition-table">
          <table class="table table-striped table-borderless">
            <thead class="position-sticky top-0 start-0 bg-white border-top border-bottom">
              <tr>
                <th scope="col">編號</th>
                <th scope="col">物種名</th>
                <th scope="col">學名</th>
                <th scope="col">觀測紀錄數</th>
              </tr>
            </thead>
            <tbody>
              {{#each speciesCounts}}
              <tr class="text-secondary">
                <td scope="row">{{getNo @index}}</th>
                <td>{{this.name}}</th>
                <td class="fst-italic">{{this.scientificName}}</td>
                <td>{{this.counts}}</td>
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>
{{> footer}}
{{#if isDev}}
<script src="/speciesComposition.bundle.js"></script>
{{else}}
<script src="/dist/js/speciesComposition.bundle.js"></script>
{{/if}}